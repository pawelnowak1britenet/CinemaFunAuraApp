<aura:component description="Search"
                implements="flexipage:availableForAllPageTypes, flexipage:availableForRecordHome, force:hasRecordId"
                access="global">

    <aura:attribute name='queryString' type='String' description='Searched query'/>
    <aura:attribute name="options" type="List" default="[
            {'label': 'Movie', 'value': 'true'},
            {'label': 'Actor', 'value': 'false'}
            ]"/>

    <aura:attribute name="searchMovies" type="String" default="true"/>
    <aura:registerEvent name="appEvent" type="c:auraEvent"/>
    <aura:registerEvent name="c:toggleSpinner" type="c:toggleSpinner"/>

    <lightning:card>
        <div class="slds-grid slds-m-bottom_large">
            <div class="MovieOrActorToggler">
                <lightning:radioGroup name="SetMovieOrActor"
                                      label=""
                                      options="{! v.options }"
                                      value="{! v.searchMovies }"
                                      type="button"
                />

            </div>
            <div class="SearchInput">
                <lightning:input value="{! v.queryString}" type="search" name="input1" label=""
                                 placeholder="Search ..."/>
<!--                //custom labelka-->

            </div>

            <div class="btnFind">
                <lightning:button variant="brand" label="Search" title="Brand action"
                                  onclick="{! c.onSearchClick }"/>
            </div>
        </div>
    </lightning:card>
</aura:component>